@model pruebarestaurante.Models.PlatilloIngredienteViewModel

<h2>Eliminar Platillo</h2>

<p>¿Estás seguro de que deseas eliminar este platillo?</p>

<p>ID del Platillo: @Model</p>

<form method="post" action="@Url.Action("Eliminar", "Platillo", new { id = Model })">
    <input type="submit" value="Eliminar" class="btn btn-danger" />
    <a href="@Url.Action("Index", "Platillo")" class="btn btn-secondary">Cancelar</a>
</form>
