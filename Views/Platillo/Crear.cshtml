@model pruebarestaurante.Models.PlatilloIngredienteViewModel
@{
    ViewData["Title"] = "Crear Platillo";
}
@section Scripts {
    <script src="~/js/site.js"></script>
}

<div class="jumbotron">
    <h1 class="text-center restaurant-name">@ViewData["Title"]</h1>
</div>
<form id="platilloForm" asp-action="Guardar">
    <div class="form-group">
        <label>Nombre Platillo:</label>
        <input asp-for="nombrePlatillo" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Precio Platillo:</label>
        <input asp-for="precioPlatillo" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Descripción Platillo:</label>
        <textarea asp-for="descripcionPlatillo" class="form-control" required></textarea>
    </div>

    <div class="form-group">
        <label>Número de Ingredientes:</label>
        <input type="number" id="numeroIngredientes" class="form-control" min="0" required />
    </div>

    <div id="ingredientes-container"></div>

    <div id="crearIngredientesBtnContainer" style="display: none;">
        <button type="button" onclick="crearFormularios()" class="btn btn-primary">Crear Ingredientes</button>
    </div>

    <div id="guardarBtnContainer" style="display: none;">
        <button type="submit" class="btn btn-primary">Guardar</button>
    </div>
</form>


