@model System.Data.DataTable
@{
    ViewData["Title"] = "Existencias Menú";
}

<div class="jumbotron">
    <h1 class="text-center">@ViewData["Existencias Menú"]</h1>
</div>

<table id="platillosTable" class="table table-bordered">
    <thead class="thead-light">
        <tr>
            <th>Id Platillo</th>
            <th>Nombre Platillo</th>
            <th>Precio Platillo</th>
            <th>Descripción Platillo</th>
            <th>Porciones Disponibles</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Rows.Count; i++)
        {
            <tr>
                <td>@Model.Rows[i]["idPlatillo"]</td>
                <td>@Model.Rows[i]["nombrePlatillo"]</td>
                <td>@Model.Rows[i]["precioPlatillo"]</td>
                <td>@Model.Rows[i]["descripcionPlatillo"]</td>
                <td>@Model.Rows[i]["Porciones Disponibles"]</td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#platillosTable').DataTable();
        });
    </script>
}
